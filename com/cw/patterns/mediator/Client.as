package com.cw.patterns.mediator{	import flash.display.Sprite;	public class Client extends Sprite	{		private var headLights:ConcreteColleague1;		private var panelLights:ConcreteColleague2;		private var mediator:Mediator;		public function Client()		{			headLights=new ConcreteColleague1();			panelLights=new ConcreteColleague2();			mediator=new ConcreteMediator();			headLights.listenMediator(mediator);			panelLights.listenMediator(mediator);			headLights.doChange("on","col1");			//panelLights.doChange("on","col2");			panelLights.doChange("0","hi");		}	}}